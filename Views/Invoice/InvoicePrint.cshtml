@model Invoice.View_Models.InvoiceVM
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
<style>
    .invoice-container {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background: white;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .invoice-title {
        color: #2c3e50;
        font-size: 24px;
        border-bottom: 2px solid #3498db;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .invoice-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 30px;
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
    }

        .invoice-info p {
            margin: 8px 0;
        }

        .invoice-info strong {
            color: #2c3e50;
            display: inline-block;
            width: 140px;
        }

    .invoice-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .invoice-table th {
            background-color: #3498db;
            color: white;
            padding: 12px 15px;
            text-align: left;
            font-weight: 600;
        }

        .invoice-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #dee2e6;
        }

        .invoice-table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .invoice-table tr:hover {
            background-color: #f1f4f6;
        }

    .grand-total {
        margin-top: 20px;
        text-align: right;
        font-size: 1.2em;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
    }

        .grand-total strong {
            color: #2c3e50;
            margin-right: 10px;
        }

    @@media print {
        .invoice-container {
            box-shadow: none;
            margin: 0;
            padding: 10px;
        }

        .invoice-table th {
            background-color: #f8f9fa !important;
            color: #333;
        }
    }
</style>

<div class="invoice-container">
    <h1 class="invoice-title">Invoice Details</h1>

    <div class="invoice-info">
        <div>
            <p><strong>Customer Name:</strong> @Model.Name</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Address:</strong> @Model.Address</p>
        </div>
        <div>
            <p><strong>Date:</strong> @Model.Date.ToString("dd-MM-yyyy")</p>
            <p><strong>Printed By:</strong>@UserManager.GetUserName(User) </p>
            
        </div>
    </div>

    <table class="invoice-table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Quantity</th>
                <th>Item Discount</th>
                <th>Manual Discount</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.InvoiceItems)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.ItemDiscount</td>
                    <td>@Model.ManualDiscount</td>
                    <td>@item.Price</td>
                    <td>@item.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="grand-total">
        <strong>Grand Total:</strong> @Model.grandTotal
    </div>
</div>















