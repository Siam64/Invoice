@model Invoice.View_Models.InvoiceVM
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Invoice Print</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/css/invoice.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        * {
            margin: 0px;
            padding: 0px;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .wrapper {
            flex: 1;
            padding: 10px; /* Add padding to give space around the table */
        }

        .invoice {
            width: 100%; /* Full-width for A4 */
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
        }

        .table {
            width: 100%; /* Ensure table spans full width */
            table-layout: auto; /* Allow columns to adjust automatically */
        }

            .table thead th, .table tbody td {
                padding: 10px;
                border: 1px solid #ddd; /* Optional: Add table borders */
            }
    </style>
</head>

<body>
    <header>
        <img src="~/img/Header.png" width="100%" alt="Header Image" />
    </header>
    <br />
    <div class="wrapper">
        <section class="invoice">
            <!-- Title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        <i class="fas fa-globe"></i>
                    </h2>
                </div>
            </div>
            <br />
            <!-- Info row -->
            <div class="row invoice-info mb-4">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        Company<br />
                        @Invoice.Helper.CompanyAddress.Address<br>
                        @Invoice.Helper.CompanyAddress.Phone<br>
                        @Invoice.Helper.CompanyAddress.Email
                    </address>
                </div>
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        <strong>@Model.Name</strong><br>
                       Address: @Model.Address<br>
                       Phone: @Model.Phone<br />
                    </address>
                </div>
                <div class="col-sm-4 invoice-col">
                    <b>Invoice# @Model.InvoiceID</b><br>
                    <b>Date: @Model.Date.ToString("dd-MM-yyyy")</b>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-5">Description</th>
                                <th class="col-1 text-end">Qty</th>
                                <th class="col-2 text-end">Unit Price</th>
                                <th class="col-2 text-end">Discount</th>
                                <th class="col-2 text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.InvoiceItems)
                            {
                                <tr>
                                    <td class="col-5">@item.Description</td>
                                    <td class="col-1 text-end">@item.Quantity</td>
                                    <td class="col-2 text-end">@item.Price</td>
                                    <td class="col-2 text-end">@item.ItemDiscount @item.discountType</td>
                                    <td class="col-2 text-end">@item.TotalPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="grand-total">
                        <strong>Manual Discount:</strong> @Model.ManualDiscount ৳ <br />
                        <strong>Grand Total:</strong> @Model.grandTotal<br />
                        <strong>Total Paid:</strong> @Model.Paid
                        <strong>Due(Ammount):</strong> @Model.Due<br />
                        <strong>Payment Method:</strong> @Model.PaymentMethod<br />
                    </div>
                </div>
            </div>
        </section>
    </div>

    <footer class="border-top footer text-muted text-center">
        <img src="~/img/Footer.png" width="100%" alt="Footer Image" />
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>window.addEventListener("load", window.print());</script>
</body>
</html>
